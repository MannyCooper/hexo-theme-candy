.app_recommend
    border-radius: 15px
    max-width: 500px
    display: block
    margin-left: auto
    margin-right: auto
    .media
        margin-bottom:0 !important
        align-items: center
    .media-content
        align-self: center

.app_icon
    background-color: #0278d7
    padding: 10px
    border-radius: 15px
    margin-bottom: 0 !important
    margin-left: 0!important
    margin-right: 1.25rem !important

.download-icon
    color:black
    margin-right: -10px
    float:right
    .icon
        margin-right: 10px
        border-radius: 999px
    > *
        fill: black

.dark .download-icon
    color:white
    > *
        fill: white

.app_recommend .media .image
    width: 48px
    height: 48px

.box.app_recommend
    margin-bottom: 2rem !important
    small
    font-size: small

@media (max-width: 501px)
    .app_recommend .media
        position: relative
    .download-icon
        position:absolute
        bottom: -31px
        right: -3px